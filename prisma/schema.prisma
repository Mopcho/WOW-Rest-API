// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id       String  @id @default(uuid())
  username String  @unique
  faction  Faction
  race     Races
  items    Item[]
}

model Item {
  id             String      @id @default(uuid())
  type           ItemType
  weaponType     WeaponType?
  physicalDamage Int?
  arrmorType     ArrmorType
  defence        Int?
  dodge          Float?

  Player   Player? @relation(fields: [playerId], references: [id])
  playerId String?
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  email    String? @unique
  password String
}

// ** Enums **
enum ItemType {
  Weapon
  Arrmor
}

enum WeaponType {
  Sword
  Mace
  Bow
  Scepter
}

enum ArrmorType {
  Mail
  Cloth
  Plate
}

enum Faction {
  Alliance
  Horder
}

enum Races {
  Human
  Dwarf
  Gnome
  NighElf
  Orc
  Troll
  Tauren
  BloodElf
}

enum SkillNames {
  Fishing
  FirstAid
  Cooking
  Blacksmith
}
